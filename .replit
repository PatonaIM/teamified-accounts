modules = ["nodejs-20", "web", "bash", "postgresql-16"]

[agent]
expertMode = true
integrations = ["javascript_openai_ai_integrations:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["gh", "vim-full"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend"

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev"
waitForPort = 5000

[[workflows.workflow]]
name = "Backend"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run start:dev"

[deployment]
deploymentTarget = "vm"
run = ["npm", "run", "start:prod"]
build = ["npm", "run", "build:all"]

[userenv]

[userenv.production]
PORT = "5000"
NODE_ENV = "production"
BASE_URL = "https://teamified-accounts.replit.app"

[userenv.shared]
JOBSEEKER_PORTAL_SIGNUP_REDIRECT_URL = "https://teamified-jobseeker.replit.app/api/auth/callback/teamified-sso"
ATS_PORTAL_SIGNUP_REDIRECT_URL = "https://teamified-ats.replit.app/auth/callback"
JOBSEEKER_PORTAL_SIGNUP_REDIRECT_URL_STAGING = "https://270a25ac-5fe3-4516-878e-ca92be1342f6-00-3t6zo5hw1y0g6.pike.replit.dev/api/auth/callback/teamified-sso"
ATS_PORTAL_SIGNUP_REDIRECT_URL_STAGING = "https://db354511-74f8-438f-8db4-97485f438054-00-37mnsckallheh.sisko.replit.dev/auth/callback"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80
