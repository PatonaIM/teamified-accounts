modules = ["nodejs-20", "web", "bash", "postgresql-16"]

[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["gh", "vim-full"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev:full"
waitForPort = 5000

[deployment]
deploymentTarget = "vm"
run = ["npm", "run", "start:prod"]
build = ["npm", "run", "build:all"]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 41773
externalPort = 3002

[userenv]

[userenv.production]
PORT = "5000"
NODE_ENV = "production"
